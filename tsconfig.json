{
  "compilerOptions": {
     "rootDir": "./src",
    "outDir": "./dist",   
     "target": "es2019",                                
    "lib":  ["dom", "ES2021"],         
    "experimentalDecorators": true,                            
   "emitDecoratorMetadata": true,   
    "module": "es2020",   
    "moduleResolution": "node",  
    "allowJs": false,   
    "sourceMap": true,  
     "allowSyntheticDefaultImports": true,                  
    "esModuleInterop": true,                                                 
     "strictNullChecks": true,   
    "skipLibCheck": true  ,
    "preserveConstEnums": true
  },
  "include": ["**/*.ts"]
}


